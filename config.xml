<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        id        = "com.jambots.cockpit"
        versionCode="1" 
        version   = "1.01">

    <!-- versionCode is optional and Android only -->
<preference name="phonegap-version" value="3.7.0" />
<preference name="webviewbounce" value="false" />
<name>cockpit</name>
<description>War Toy</description>
<gap:platform name="ios" />
<gap:platform name="android" />

<gap:plugin name="org.apache.cordova.device-motion" version="0.2.10" />
<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />

<preference name="StatusBarOverlaysWebView" value="true" />
<preference name="orientation" value="portrait" />
<preference name="fullscreen" value="true" /> 


<preference name="StatusBarOverlaysWebView" value="true" />
<gap:config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
</gap:config-file>
<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
</gap:config-file>

<access origin="*" />


<feature name="http://api.phonegap.com/1.0/network" />
<feature name="http://api.phonegap.com/1.0/notification" />
<feature name="http://api.phonegap.com/1.0/media" />
<feature name="http://api.phonegap.com/1.0/device" />
<!-- works iOS 
android is 
    [javac] /project/src/com/keith/canvascameraplugin/CanvasCameraView.java:87: error: package R does not exist
<gap:plugin name="com.keith.cordova.plugin.canvascamera" version="1.0.1" />
-->
<gap:plugin name="com.modaltech.cordova.plugin.canvascamera" version="1.0" />


<!-- Define app icon for each platform. -->
<icon src="res/android_icon.png" />
<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
<gap:plugin name="org.apache.cordova.media" version="0.2.8" />
<gap:plugin name="org.apache.cordova.network-information" />
<gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
</widget>
